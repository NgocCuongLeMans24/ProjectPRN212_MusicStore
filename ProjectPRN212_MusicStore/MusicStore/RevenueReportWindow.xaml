<Window x:Class="MusicStore.RevenueReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revenue Report - Music Store" Height="459" Width="700" Background="#282C34" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <!-- Title Section -->
            <Label Content="Revenue Report" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#61AFEF" Margin="0,20"/>

            <!-- Total Revenue -->
            <StackPanel Margin="10">
                <Label Content="Total Revenue:" Foreground="#ABB2BF"/>
                <TextBlock x:Name="TotalRevenueTextBlock" FontSize="16" Foreground="White"/>
            </StackPanel>

            <!-- Total Quantity Sold -->
            <StackPanel Margin="10">
                <Label Content="Total Quantity Sold:" Foreground="#ABB2BF"/>
                <TextBlock x:Name="TotalQuantitySoldTextBlock" FontSize="16" Foreground="White"/>
            </StackPanel>

            <!-- Refresh Button -->
            <Button Content="Refresh Report" Height="40" Width="120" Margin="20" Background="#98C379" Foreground="White" Click="RefreshReportButton_Click"/>
            <Button x:Name="QuitButton" Content="Quit" Height="40" Width="120" Margin="20" Background="Red" Foreground="White" Click="QuitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
